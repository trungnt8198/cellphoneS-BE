<body>
  <div class="login-container">
    <div class="logo">
      <h1>Admin Dashboard</h1>
    </div>

    <form id="loginForm" method="POST" action="/admin/auth/login" novalidate>
      <div class="form-group">
        <label for="email">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          placeholder="Enter your email"
          required
        />
        <span class="error-text" id="emailError"
          >Please enter a valid email address.</span
        >
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          placeholder="Enter your password"
          required
        />
        <span class="error-text" id="passwordError"
          >Please enter your password.</span
        >
      </div>

      <div
        style="
          display: flex;
          justify-content: space-between;
          margin-bottom: 20px;
        "
      >
        <div class="remember-me">
          <input type="checkbox" id="remember" />
          <label for="remember">Remember me</label>
        </div>

        <a
          href="forgot-password.html"
          style="color: #3a86ff; text-decoration: none; font-size: 14px"
          >Forgot Password?</a
        >
      </div>

      <button type="submit" class="btn">Login</button>

      <div class="footer">
        <p>
          Don't have an account?
          <a href="/admin/auth/register">Register</a>
        </p>
      </div>
    </form>
  </div>
  <style>
    .error-text {
      color: #f44336;
      font-size: 12px;
      margin-top: 5px;
      display: none;
    }

    .form-control.error {
      border-color: #f44336;
    }
  </style>
</body>
